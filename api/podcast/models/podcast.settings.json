{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "name": "podcast"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "biginteger"
    },
    "text": {
      "type": "biginteger"
    },
    "website": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "location": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "social": {
      "type": "component",
      "repeatable": true,
      "component": "social.social-links"
    }
  }
}
